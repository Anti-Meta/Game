<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antimeta.game">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/CustomTheme">
        <activity
            android:name="com.antimeta.game.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.antimeta.game.activity.MainMenuActivity" android:theme="@style/CustomTheme.NoActionBar" />
        <activity android:name="com.antimeta.game.activity.StartActivity" android:theme="@style/CustomTheme.NoActionBar" />
    </application>

</manifest>